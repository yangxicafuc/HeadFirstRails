<h1>Editing <%= @ad.name %></h1>
<%= form_for @ad, :url => {:action => 'update' } do |form| %>
	<p>
		<b>Name</b><BR/>
		<%= form.text_field :name %>
	</p>
	<p>
		<b>Description</b><BR/>
		<%= form.text_area :description %>
	</p>
	<p>
		<b>Price</b><BR/>
		<%= form.text_field :price %>
	</p>
	<p>
		<b>Seller Id</b><BR/>
		<%= form.text_field :seller_id %>
	</p>
	<p>
		<b>Email</b><BR/>
		<%= form.text_field :email %>
	</p>
	<p>
		<b>Img url</b><BR/>
		<%= form.text_field :img_url %>
	</p>
	<p>
		<%= form.submit "update" %>
	</p>
<% end %>